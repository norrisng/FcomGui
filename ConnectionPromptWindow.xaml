<Window x:Class="FcomGui.ConnectionPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FcomGui"
        mc:Ignorable="d"
        Title="Select connection" Height="150" Width="300" ResizeMode="NoResize" WindowStyle="ToolWindow" Topmost="True">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Please select the internet connection in use:" />
        <ComboBox x:Name="connectionList" Width="250">
            <ComboBoxItem>VirtualBox Host-Only Ethernet Adapter</ComboBoxItem>
            <ComboBoxItem>Wi-Fi</ComboBoxItem>
        </ComboBox>
        <TextBlock />
        <Button Name="SelectConnectionButton">OK</Button>
    </StackPanel>
</Window>
